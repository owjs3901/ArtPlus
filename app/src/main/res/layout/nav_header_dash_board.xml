<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:theme="@style/ThemeOverlay.AppCompat.Dark"
		android:orientation="vertical"
		android:gravity="start">

	<TextView
			android:layout_marginTop="?attr/actionBarSize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="편의시설"
			android:textSize="20dp"
			android:textColor="@color/thema"
			/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="□ 편의 시설"
			android:textSize="16dp"
			android:textColor="#000000"
			/>

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<TextView
				android:id="@+id/tag1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="주차장"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="매표소"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="안내데스크"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag22"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="물품보관소"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="키즈센터"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

	</LinearLayout>

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<TextView
				android:id="@+id/tag5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="장애인시설"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="카페"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag7"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="화장실"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="기념품점"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag9"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="매점"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag10"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="식당"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>
	</LinearLayout>

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<TextView
				android:id="@+id/tag11"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="응급키트"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag12"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="엘리베이터"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag13"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="휴식공간"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag14"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="일반도슨트"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag15"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="어린이도슨트"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>
	</LinearLayout>

	<TextView
			android:layout_marginTop="?attr/actionBarSize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="관람"
			android:textSize="20dp"
			android:textColor="@color/thema"
			/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="□ 공연"
			android:textSize="16dp"
			android:textColor="#000000"
			/>
	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<TextView
				android:id="@+id/tag16"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="오페라"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag17"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="클래식"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag18"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="뮤지컬"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>
	</LinearLayout>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="□ 전시"
			android:textSize="16dp"
			android:textColor="#000000"
			/>
	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<TextView
				android:id="@+id/tag19"

				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="그림"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag20"

				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="조각"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>

		<TextView
				android:id="@+id/tag21"

				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="유물"
				android:textColor="@color/thema_grey"
				android:layout_margin="5dp"/>
	</LinearLayout>
</LinearLayout>
